file = {:C$\backslash$:/Users/Hp/Documents/Journal library/roleda{\_}et{\_}al{\_}2006.pdf:pdf},
isbn = {0032-0935 (Print)$\backslash$n0032-0935 (Linking)},
issn = {00320935},
journal = {Planta},
keywords = {Cyclobutane pyrimidine dimers (CPDs),Growth,Laminaria digitata,Laminaria saccharina,Laminaria solidungula,Pigments},
number = {3},
pages = {407--417},
pmid = {16244865},
title = {{Thallus morphology and optical characteristics affect growth and DNA damage by UV radiation in juvenile Arctic Laminaria sporophytes}},

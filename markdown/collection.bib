doi = {10.1093/icb/icn069},
file = {:C$\backslash$:/Users/Hp/Documents/Journal library/Koehl{\_}et{\_}al{\_}2008{\_}synopsis.pdf:pdf},
isbn = {1540-7063},
issn = {15407063},
journal = {Integrative and Comparative Biology},
number = {6},
pages = {834--851},
pmid = {21669836},
title = {{How kelp produce blade shapes suited to different flow regimes: A new wrinkle}},
volume = {48},
year = {2008}
}
@article{Wernberg2003,

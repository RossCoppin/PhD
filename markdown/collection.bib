@article{Lutjeharms1987-ri,
abstract = {Mesoscale circulation features have been shown to play an
important role in the cross-frontal mixing of upwelling cells,
their frontal morphology and in their interaction with oceanic
water masses. With three years of detailed thermal infra-red
satellite information on the South-East Atlantic upwelling

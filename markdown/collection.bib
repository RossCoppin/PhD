journal = {Ocean Science},
number = {4},
pages = {545--550},
title = {{The 2011 marine heat wave in Cockburn Sound, southwest Australia}},
volume = {8},
year = {2012}
}
@article{Matson2007-lv,
abstract = {Environmental factors have long been shown to influence species
distributions, with range limits often resulting from
environmental stressors exceeding organism tolerances. However,
these abiotic factors may differentially affect species with
multiple life-history stages. Between September 2004 and January
2006, the roles of temperature and nutrient availability in
explaining the southern distributions of two understory kelps,

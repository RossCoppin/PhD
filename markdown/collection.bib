journal = {J. Appl. Phycol.},
keywords = {Attachment strength; Depth; Maturity stages; Phaeophyceae; Sargassum horneri},
month = {may},
number = {6},
pages = {3679--3687},
publisher = {Springer},
title = {{Attachment strength of the subtidal seaweed Sargassum horneri (Turner) C. Agardh varies among development stages and depths}},
volume = {28},
year = {2016}
}

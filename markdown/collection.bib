journal = {S. Afr. J. Mar. Sci./S.-Afr. Tydskr. Seewet.},
month = {jun},
number = {1},
pages = {439--462},
publisher = {Taylor {\&} Francis},
title = {{Case studies on the socio-economic characteristics and lifestyles of subsistence and informal fishers in South Africa}},
volume = {24},
year = {2002}
}

@article{Harrold1989-la,
abstract = {Forests of giant kelp Macrocystis pyrifera (L.) C.A. Agardh are
among the most productive communities on earth. Much of the
annual production of kelp in central California is exported from
the forests as large floating rafts. Since these rafts may float

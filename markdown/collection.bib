@article{Jonathon_R_Miles2001-ms,
abstract = {[A field experiment has been carried out to examine the effects
of seawalls on hydrodynamic and sediment dynamic processes on
sandy beaches. Pressure transducers, electromagnetic current
meters and optical backscatter sensors were deployed directly in
front of a seawall at Teignmouth, South Devon (U.K.) in June

journal = {Methods in Ecology and Evolution},
keywords = {Closed-circuit rebreather,Fish behaviour,Flight initiation distance,Marine protected area,Minimum approach distance,Observer presence,Spearfishing,Stereo-video,Survey bias,Underwater visual census},

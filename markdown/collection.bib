@article{Ralph1998-hn,
abstract = {Hormosira banksii shows a considerable degree of morphological
variability throughout its range in south-eastern Australia,
apparently in relation to the local habitat, and there have been
several previous qualitative attempts to categorize this
variation by recognizing ecoforms. From our quantitative
morphometric analyses of plants from 21 sites covering 300 km of
coastline in south-eastern Australia, using multiple
discriminant function analysis based on seven vesicle
characteristics (measuring size and shape), there is very little

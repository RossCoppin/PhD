@article{Beuchel2006-yc,
abstract = {We investigated temporal variations in marine macrobenthic
community structure from 1980 to 2003 in high-arctic Kongsfjorden
(Svalbard) based on analysis of annual photographs at a permanent
rocky bottom station. Abundance and area covered by macrobenthic
organisms were estimated based on image analysis of
high-resolution photographs, and community summary parameters

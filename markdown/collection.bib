@incollection{Anderson1966-rd,
abstract = {ABSTRACT In situ studies of spore production and dispersal have
been made for the giant kelp, Macrocystis pyrifera, using
self-contained diving apparatus. Spore liberation rates were
determined by enclosing sporophylls in plastic bags for several
hours. The connection to the plant was not severed during the
experiment. Samples were withdrawn periodically by hypodermic
syringe or the sporophyll and bag were brought to the surface at
the end of the test period. Samples were preserved in formalin
and the bag was thoroughly shaken to loosen any attached spores.
Average liberation rates were about 500,000 spores/hr from
sporophylls showing well-developed sporangial areas.
Considerable variation from this average rate was found. Much
greater rates occurred if the sporophyll was plucked and
transported to the laboratory and left for a few hours in the
bag. Spore dispersal was studied by determining concentrations
of juveniles appearing around adult plants as a function of
distance from the parent. The maximum distance juveniles have
been found from isolated single transplants is 5 m. In this case
the concentration of juveniles decreased inversely as the cube
of the radius. Concentration of juveniles as a function of
distance increased as the number of adults increased. In a bed
where the concentration of adults averaged 0.6/m2, no decrease
in density of juveniles was found for a distance of 30 m from
the parents.},
author = {Anderson, E K and North, W J},
booktitle = {Proceedings of the Fifth International Seaweed Symposium, Halifax, August 25–28, 1965},
editor = {Young, E Gordon and McLACHLAN, J L},
month = {jan},

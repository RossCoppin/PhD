@article{Wu2017-no,
abstract = {The presence of kelp beds in the water column generates drag to
flows and modifies hydrodynamic processes. In this paper we
examine the modifications of tidal flows in the Hecate Strait by
including an explicit representation of the kelp-induced drag in
a three-dimensional numerical model. The model is evaluated
against a theoretical solution and it agrees well with the
theory. Model results show that kelp beds significantly change
tidal circulation structures by damping tidal velocity by
40–80{\%} in interiors of the beds, but enhancing tidal velocity

issn = {18647782},
journal = {Aquatic Biology},
keywords = {Biomass loss,Ecklonia radiata,Pruning,Seaweed biomechanics,Survival,Western Australia,Wounds},
number = {3},
pages = {223--233},
title = {{Wounded kelps: Patterns and susceptibility to breakage}},
volume = {17},

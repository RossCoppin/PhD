@article{Stewart2006-yx,
abstract = {Turbinaria ornata (Turner) J. Agardh is a tropical alga that
disperses by detached, reproductively mature floating fronds.
Material properties (breaking stress, breaking extension),
buoyancy, and the proportion of reproductive tissue per frond
were measured for juvenile, adult, and old fronds of T. ornata.

keywords = {Carbon,Ecosystem engineering,Growth,Kelp bed,Light,Macrocystis pyhfera,Morphology,Nitrogen,Water flow},
pages = {101--112},
title = {{Differences in growth, morphology and tissue carbon and nitrogen of Macrocystis pyrifera within and at the outer edge of a giant kelp forest in California, USA}},
volume = {375},

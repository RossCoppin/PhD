journal = {Mar. Genomics},
keywords = {Global warming; Heat shock protein; Heat stress; Macroalgae; Photosynthetic performance},
month = {feb},
pages = {27--36},
publisher = {Elsevier},
title = {{Thermal stress resistance of the brown alga Fucus serratus along the {\{}North-Atlantic{\}} coast: acclimatization potential to climate change}},
volume = {13},
year = {2014}
}

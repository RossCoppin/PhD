title = {{Modeling population connectivity by ocean currents, a graph-theoretic approach for marine conservation}},
volume = {23},
year = {2008}
}
@article{Smith1988-sh,
abstract = {Surface layer coefficients for wind profiles, wind stress, and
heat flux in typical open sea conditions are briefly reviewed.

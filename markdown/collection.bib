issn = {01718630},
journal = {Marine Ecology Progress Series},
keywords = {Canopy,Competition,Facilitation,Fucoid,Mechanisms,Turfing algae},
pages = {95--105},
title = {{Resistance and facilitation by native algal communities in the invasion success of Undaria pinnatifida}},

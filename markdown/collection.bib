title = {{A dynamic model for wave-induces light fluctuations in a kelp forest}},
volume = {38},
year = {1993}
}
@article{Anderson2009-rh,
abstract = {Wind-driven upwelling in the ocean around Antarctica helps
regulate the exchange of carbon dioxide (CO2) between the deep

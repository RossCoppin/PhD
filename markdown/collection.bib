keywords = {Forecasting; Shoreline model; Prediction; Shoreline variability; Monte Carlo simulation; Australian Gold Coast},
month = {jun},
number = {6},
pages = {620--629},
publisher = {Elsevier},
title = {{Forecasting seasonal to multi-year shoreline change}},
volume = {57},
year = {2010}
}

@article{Rykaczewski2008-xz,
abstract = {Upwelling of nutrient-rich, subsurface water sustains high
productivity in the ocean's eastern boundary currents. These
ecosystems support a rate of fish harvest nearly 100 times the
global mean and account for {\textgreater}20{\%} of the world's marine fish

title = {{Recruitment processes in Haliotis rubra (Mollusca: Gastropoda) and regional hydrodynamics in southeastern Australia imply localized dispersal of larvae}},
volume = {124},
year = {1988}
}
@article{Dudgeon1992-yi,
abstract = {The lower rocky intertidal zone of many moderately exposed and

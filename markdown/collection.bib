doi = {10.1007/s10152-010-0211-6},
file = {:C$\backslash$:/Users/Hp/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Bolton - 2010 - The biogeography of kelps (Laminariales, Phaeophyceae) A global analysis with new insights from recent advances in molec.pdf:pdf},
isbn = {1438-387X},
issn = {1438387X},
journal = {Helgoland Marine Research},
keywords = {Dispersal,Diversity,Evolution,Global distribution,Kelps,Laminariales},
number = {4},
pages = {263--279},
title = {{The biogeography of kelps (Laminariales, Phaeophyceae): A global analysis with new insights from recent advances in molecular phylogenetics}},
volume = {64},

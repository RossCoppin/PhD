journal = {J. R. Soc. Interface},
keywords = {biogeography; environmental science},
number = {81},
pages = {20120979},
title = {{Tracking the long-distance dispersal of marine organisms: sensitivity to ocean model resolution}},
volume = {10},
year = {2013}
}

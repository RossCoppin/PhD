number = {3},
pages = {691--703},
publisher = {Elsevier},
title = {{Hiding and feeding in floating seaweed: Floating seaweed clumps as possible refuges or feeding grounds for fishes}},
volume = {71},
year = {2007}
}
@article{Semedo2018-gg,
abstract = {A climatology of wind sea and swell waves along the Canary
eastern boundary current area, from west Iberia to Mauritania,
is presented. The study is based on the European Centre for
Medium-Range Weather Forecasts (ECMWF) reanalysis ERA-Interim.
The wind regime along the Canary Current, along west Iberia and

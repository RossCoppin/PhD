keywords = {Aggregation; Allometry; Biomechanics; Intertidal ecology; Macroalga; Postelsia palmaeformis;Kelp density},
number = {1},
pages = {39--67},
title = {{Intertidal ``trees'': consequences of aggregation on the mechanical and photosynthetic properties of sea-palms Postelsia palmaeformis Ruprecht}},
volume = {146},
year = {1991}

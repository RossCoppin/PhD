@article{Rominger2014-jr,
abstract = {We created a model physical system to investigate the role of
blade rigidity in setting forces and rates of mass exchange for
a blade exposed to unsteady flow in a vortex street. Using a
combination of experimental and theoretical investigations, we
find that, broadly, both the forces and the mass exchange are

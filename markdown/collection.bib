title = {{Differences in growth, morphology and tissue carbon and nitrogen of $\backslash$textit{\{}Macrocystis pyrifera{\}} within and at the outer edge of a giant kelp forest in California, {\{}USA{\}}}},
volume = {375},
year = {2009}
}

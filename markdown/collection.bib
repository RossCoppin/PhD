issn = {00220981},
journal = {Journal of Experimental Marine Biology and Ecology},
keywords = {Canopy-forming seaweeds,Laminariales,Macroalgal beds,Northeast Atlantic,Subtidal ecology,Temperate reefs},
pages = {255--264},
publisher = {Elsevier B.V.},
title = {{Variability in kelp forest structure along a latitudinal gradient in ocean temperature}},

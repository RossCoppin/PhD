file = {:C$\backslash$:/Users/Hp/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Edwards, Estes - 2006 - Catastrophe, recovery and range limitation in NE Pacific kelp forests A large-scale perspective.pdf:pdf},
isbn = {0171-8630},
issn = {01718630},
journal = {Marine Ecology Progress Series},
keywords = {Biogeography,El Ni??o,Generality,Giant kelp,La Ni??a,Scale},
pages = {79--87},
title = {{Catastrophe, recovery and range limitation in NE Pacific kelp forests: A large-scale perspective}},
url = {http://www.int-res.com/abstracts/meps/v320/p79-87/},
volume = {320},

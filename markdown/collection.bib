@article{Shanks2009-yf,
abstract = {I present dispersal distances for 44 species with data on
propagule duration (PD) for 40 of these. Data were combined with
those in Shanks et al. (2003; Ecol. Appl. 13: S159-S169),
providing information on 67 species. PD and dispersal distance

issn = {01718630},
journal = {Marine Ecology Progress Series},
keywords = {Inducible defense,Non-consumptive effects,Predation risk,Predator-prey interactions},
pages = {143--151},
title = {{Seaweed traits linked to wave exposure determine predator avoidance}},
volume = {483},
year = {2013}
}
@article{Worcester1994-wf,
abstract = {The importance of larval dispersal in determining the
distribution and abundance of benthic marine organisms is well
recognized; however, the contribution of post-larval dispersal

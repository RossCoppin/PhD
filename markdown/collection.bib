year = {2010}
}
@article{Cui2012-ip,
abstract = {A massive floating green macroalgae bloom (GMB) has occurred for
several years consecutively in the Yellow Sea since 2007. In
view of the rapid growth of green macroalgae, early detection of
its patches at first appearance by satellite imagery is of
importance, and the central issue is the selection of
appropriate satellite data. As a first step towards this goal,

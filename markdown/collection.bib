@article{Clarke2003-mz,
abstract = {Temperature affects everything that an organism does. Although
we have an increasingly sophisticated understanding of
evolutionary adaptation to temperature at the molecular level
for some cellular processes, we still know little about
evolutionary temperature adaptation in gene expression,
cell-cycle control or growth, all of which influence organism
performance and fitness. Recent studies have shown that the
physiological costs of evolutionary temperature adaptation vary

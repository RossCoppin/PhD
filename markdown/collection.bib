pages = {89--109},
title = {{Interactions Among Subtidal Australian Sea Urchins , Gastropods , and Algae : Effects of Experimental Removals Author ( s ): {\{}W{\}} . {\{}J{\}} . Fletcher Reviewed work ( s ): Published by : Ecological Society of America Stable {\{}URL{\}} : http://www.jstor.org/stable/194264}},

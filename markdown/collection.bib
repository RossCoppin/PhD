@article{Duggins2001-qd,
abstract = {The relationship between hydrodynamic energy and biological
processes is examined for a kelp-dominated marine community,in
the San Juan Archipelago. Populations of a common and widely
distributed kelp, Nereocystis luetkeana, were established and
rates and causes of mortality followed at 7 sites differing

}
@article{McShane1988-ip,
abstract = {Our studies of recruitment, adult numbers, and ocean
hydrodynamics suggest that recruitment of Haliotis rubra is
primarily local. In three neighbouring coastal populations of
Haliotis rubra in southeastern Australia where adult numbers
differed significantly, recruitment was found to be correlated

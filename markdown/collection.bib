journal = {PLoS One},
month = {jan},
number = {1},
pages = {e55048},
publisher = {journals.plos.org},
title = {{Residency, habitat use and sexual segregation of white sharks, Carcharodon carcharias in False Bay, South Africa}},
volume = {8},
year = {2013}
}

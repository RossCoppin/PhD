journal = {Ecology},
keywords = {Benthic community structure,Giant kelp,Indirect facilitation,Interannual variability,Macroalgae,Macrocystis pyrifera,Sea urchin,Sessile invertebrate,Temporal variability},
number = {11},
pages = {3126--3137},
pmid = {19967868},
title = {{Direct and Indirect Effects of Giant Kelp Determine Benthic Community Structure and Dynamics}},

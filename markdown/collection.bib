keywords = {heterogeneity,patchiness,pattern,scale,variability},
number = {6},
pages = {1943--1967},
title = {{The Problem of Pattern and Scale in Ecology}},
url = {https://esajournals.onlinelibrary.wiley.com/doi/pdf/10.2307/1941447},
volume = {73},

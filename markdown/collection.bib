journal = {Marine Ecology Progress Series},
keywords = {Algae,Biomechanics,Disturbance,Flexibility,Hydrodynamics,Life history,Rocky shore,Size,Waves},
pages = {1--10},
title = {{Mechanical size limitation and life-history strategy of an intertidal seaweed}},
url = {http://www.int-res.com/abstracts/meps/v338/p1-10/},
volume = {338},
year = {2007}
}

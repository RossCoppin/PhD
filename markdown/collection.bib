title = {{Environmental controls of giant-kelp biomass in the Santa Barbara Channel, California}},
volume = {429},
year = {2011}
}
@article{Van_Cauwenberghe2013-ck,
abstract = {Microplastics are small plastic particles ({\textless}1 mm) originating
from the degradation of larger plastic debris. These
microplastics have been accumulating in the marine environment
for decades and have been detected throughout the water column
and in sublittoral and beach sediments worldwide. However, up to
